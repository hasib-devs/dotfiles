{
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#F7A5A5",
        "statusBar.noFolderBackground": "#F7A5A5",
        "statusBar.debuggingBackground": "#F7A5A5",
        "statusBar.foreground": "#434C5E",
        "statusBar.debuggingForeground": "#434C5E"
    },
    "editor.lineNumbers": "relative",
    "editor.formatOnSave": true,
    "editor.cursorSurroundingLines": 10,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "files.autoSave": "onFocusChange",
    "files.autoSaveWhenNoErrors": true,
    // Format on save
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // To improve performance
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "makefile.configureOnOpen": false,
    // Vim settings
    "vim.leader": "<space>",
    "vim.showcmd": true,
    "vim.showmodename": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.foldfix": true,
    "vim.changeWordIncludesWhitespace": true,
    "vim.camelCaseMotion.enable": true,
    "vim.statusBarColorControl": true,
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.color": "#a9dc7660",
    "vim.statusBarColors.insert": "#91ADC8",
    "vim.statusBarColors.visual": "#FFDBB6",
    "vim.statusBarColors.visualline": "#F7A5A5",
    "vim.statusBarColors.visualblock": "#FAFDD6",
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#F3F2EC",
    "vim.statusBarColors.easymotioninputmode": "#67C090",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    "vim.statusBarColors.normal": [
        "#8FBCBB",
        "#434C5E"
    ],
    "vim.handleKeys": {
        "<C-space>": false,
        "<C-h>": false,
        "<C-j>": false,
        "<C-k>": false,
        "<C-l>": false,
        "<C-s>": false,
        "<C-d>": true,
        "<C-u>": true,
    },
    // Insert Mode Keybindings
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "k"
            ],
            "commands": [
                "workbench.action.files.save"
            ],
            "after": [
                "<Esc>"
            ]
        },
    ],
    // Normal Mode Non Recursive Keybindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ],
            "silent": true
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "lineBreakInsert"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "<leader>",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "l"
            ],
            "commands": [
                "bookmarks.list"
            ]
        },
        {
            "before": [
                "<C-p>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ],
            "when": "!suggestWidgetVisible && editorHasSignatureHelpProvider && editorTextFocus"
        },
        {
            "before": [
                "<C-d>"
            ],
            "after": [
                "<C-d>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<C-u>"
            ],
            "after": [
                "<C-u>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
        {
            "before": [
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        {
            "before": [
                "<leader>",
                "y"
            ],
            "after": [
                "\"",
                "+",
                "y"
            ]
        },
        {
            "before": [
                "<leader>",
                "Y"
            ],
            "after": [
                "\"",
                "+",
                "Y"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "after": [
                "\"",
                "+",
                "p"
            ]
        },
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": [
                "g",
                "I"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "I"
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            "before": [
                "g",
                "D"
            ],
            "commands": [
                "editor.action.revealDeclaration"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": [
                "g",
                "t"
            ],
            "commands": [
                "editor.action.goToTypeDefinition"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "t"
            ],
            "commands": [
                "editor.action.peekTypeDefinition"
            ]
        },
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ],
            "when": "editorFocus"
        },
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ],
            "when": "editorFocus"
        },
        {
            "before": [
                "<leader>",
                "s",
                "s"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ],
            "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
        },
        {
            "before": [
                "<leader>",
                "g",
                "s"
            ],
            "commands": [
                "workbench.view.scm"
            ],
            "when": "workbench.scm.active"
        },
        {
            "before": [
                "<leader>",
                "g",
                "c"
            ],
            "commands": [
                "git.checkout"
            ],
            "when": "workbench.scm.active"
        },
        {
            "before": [
                "L",
            ],
            "commands": [
                "workbench.action.nextEditor"
            ],
            "when": "editorFocus"
        },
        {
            "before": [
                "H",
            ],
            "commands": [
                "workbench.action.previousEditor"
            ],
            "when": "editorFocus"
        },
        {
            "before": [
                "<leader>",
                "o",
            ],
            "commands": [
                "workbench.action.files.save"
            ],
            "when": "editorFocus"
        },
        {
            "before": [
                "<leader>",
                "i",
            ],
            "commands": [
                "editor.action.organizeImports",
            ],
            "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
        },
        {
            "before": [
                "<leader>",
                ".",
            ],
            "commands": [
                "editor.action.quickFix"
            ],
            "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
        }
    ],
    // Visual Mode Keybindings
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "y"
            ],
            "after": [
                "\"",
                "+",
                "y"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "after": [
                "\"",
                "_",
                "d",
                "P"
            ]
        },
        {
            "before": [
                "J"
            ],
            "after": [
                ":",
                "m",
                " ",
                "'",
                ">",
                "+",
                "1",
                "<CR>",
                "V"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                ":",
                "m",
                " ",
                "'",
                ">",
                "-",
                "2",
                "<CR>",
                "V"
            ]
        },
        {
            "before": [
                "<"
            ],
            "after": [
                "<",
                "g",
                "v",
                "^"
            ]
        },
        {
            "before": [
                ">"
            ],
            "after": [
                ">",
                "g",
                "v",
                "^"
            ]
        }
    ],
    // Vim Non Recursive Visual Mode Keybindings
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "cSpell.userWords": [
        "editorjs",
        "fulltext",
        "hasib",
        "Hasibur",
        "mikro",
        "Probaho",
        "Rahman",
        "turbopack",
        "UBRs"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terminal.integrated.fontSize": 13,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.enable": {
        "markdown": true,
        "plaintext": true,
        "scminput": true
    },
    "editor.fontSize": 13,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.startupEditor": "none",
    "redhat.telemetry.enabled": false,
    "security.promptForLocalFileProtocolHandling": false,
    "github.copilot.chat.scopeSelection": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.generateTests.codeLens": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "github.copilot.chat.newWorkspace.useContext7": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "terminal.integrated.cursorBlinking": true,
    "vsicons.presets.hideExplorerArrows": true,
    "explorer.compactFolders": false,
    "chat.agent.maxRequests": 100,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.autoClosingTags": true,
    "typescript.preferences.renameMatchingJsxTags": true,
    "typescript.preferences.jsxAttributeCompletionStyle": "auto",
    "remoteHub.commitDirectlyWarning": "off",
    "mdb.mcp.server": "disabled",
}